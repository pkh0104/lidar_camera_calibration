<?xml version="1.0" encoding="UTF-8"?>
<launch>

	<arg name="camera" default="/usb_cam" />
	<arg name="size" default="8x6" />
	<arg name="square" default="0.025" />

	<!-- Play rosbag record -->
	<!--
	<include file="$(find lidar_camera_calibration)/launch/play_rosbag.launch">
		<arg name="bagfile" value="2016-11-22-14-32-13_test.bag" />
	</include>
	-->

	<!-- Run camera calibration -->
	<node   
		pkg="camera_calibration"
		type="cameracalibrator.py"
		name="cameracalibrator"
		output="screen"
		args="--size=$(arg size) 
		--square=$(arg square)
		--no-service-check" >

		<!-- Remap input topics -->
		<remap from="image" to="$(arg camera)/image_raw" />
		<remap from="camera" to="$(arg camera)" />
	</node>

</launch>
